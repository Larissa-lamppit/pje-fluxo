<?xml version="1.0" encoding="ISO-8859-1"?>

<process-definition xmlns="urn:jbpm.org:jpdl-3.2" name="(VCiv) Processos digitalizados">
    <description><![CDATA[Fluxo para a digitalização de processos.]]></description>  
    <!-- SWIMLANES -->
    <swimlane name="Nó de Desvio - (VCiv) Processos digitalizados">
        <assignment actor-id="#{actor.id}"/>
    </swimlane>
    <swimlane name="Secretaria">
        <assignment pooled-actors="#{localizacaoAssignment.getPooledActors('5:1338,6:1469,8:5852,8:5853')}" actor-id="#{actor.id}"/>
    </swimlane>  
    <!-- START-STATE -->
    <start-state name="Início">
        <task name="Tarefa inicial" swimlane="Secretaria" priority="3"/>
        <transition to="(VCiv) Lançar movimento de recebimento dos autos" name="(VCiv) Lançar movimento de recebimento dos autos"/>
    </start-state>  
    <!-- NODES -->
    <node name="(VCiv) Lançar movimento de recebimento dos autos">
        <transition to="(VCiv) Autos recebidos de digitalização" name="(VCiv) Autos recebidos de digitalização"/>
        <event type="node-enter">
            <action expression="#{preencherMovimento.deCodigo(132).lancarMovimento()}"/>
        </event>
    </node>
    <task-node end-tasks="true" name="(VCiv) Autos recebidos de digitalização">
        <task name="(VCiv) Autos recebidos de digitalização" swimlane="Secretaria" priority="3">
            <controller>
                <variable name="aviso" mapped-name="textAlert:aviso" access="read,write"/>
                <variable name="MovimentarEmLote" mapped-name="movimentarLote:MovimentarEmLote" access="read,write"/>
            </controller>
        </task>
        <description><![CDATA[*Variáveis*

1. Variável: aviso1
   Label:
   Escrita: Sim
   Obrig.: Não
   Tipo: Aviso

2. Variável: MovimentarEmLote
   Label: 
   Escrita: Sim
   Obrig.: Não
   Tipo: Habilitar Movimentação em Lote]]></description>
        <transition to="Nó de Desvio - (VCiv) Processos digitalizados" name="Nó de Desvio - (VCiv) Processos digitalizados">
            <condition expression="#{true}"/>
        </transition>
        <transition to="(VCiv) Autos devem ser retificados?" name="Processeguir para a próxima tarefa"/>
    </task-node>
    <decision expression="#{entityManager.createNativeQuery(parametroUtil.getParametro('pje:fluxo:digitalizacao:retificar:mariaFerroPeron')).setParameter('idProcesso', tramitacaoProcessualService.recuperaProcesso().getIdProcessoTrf()).getSingleResult() ? '(VCiv) Autos recebidos de digitalização - Retificar dados' : '(VCiv) Autos recebidos de digitalização - Concluir recebimento'}" name="(VCiv) Autos devem ser retificados?">
        <transition to="(VCiv) Autos recebidos de digitalização - Retificar dados" name="(VCiv) Autos recebidos de digitalização - Retificar dados"/>
        <transition to="(VCiv) Autos recebidos de digitalização - Concluir recebimento" name="(VCiv) Autos recebidos de digitalização - Concluir recebimento"/>
    </decision>
    <task-node end-tasks="true" name="(VCiv) Autos recebidos de digitalização - Concluir recebimento">
        <task name="(VCiv) Autos recebidos de digitalização - Concluir recebimento" swimlane="Secretaria" priority="3"/>
        <transition to="Nó de Desvio - (VCiv) Processos digitalizados" name="Nó de Desvio - (VCiv) Processos digitalizados">
            <condition expression="#{true}"/>
        </transition>
        <transition to="Término" name="Encaminhar para análise de secretaria"/>
        <transition to="(VCiv) Encaminhamento para instância superior" name="Remeter processo à instância superior"/>
    </task-node>
    <task-node end-tasks="true" name="(VCiv) Autos recebidos de digitalização - Retificar dados">
        <task name="(VCiv) Autos recebidos de digitalização - Retificar dados" swimlane="Secretaria" priority="3">
            <controller>
                <variable name="aviso_retificar_dados_1" mapped-name="textAlert:aviso_retificar_dados_1" access="read,write"/>
                <variable name="aviso_consultar_saj_1" mapped-name="textAlert:aviso_consultar_saj_1" access="read,write"/>
            </controller>
        </task>
        <description><![CDATA[*Variáveis*

1. Variável: aviso_retificar_dados_1
   Label: Para prosseguir no fluxo, se faz necessário inserir os dados (CPF/CNPJ/OAB) corretos da(s) parte(s) assinalada(s) com o nome de Maria Ferro Peron. Por favor, realize o(s) ajuste(s) da(s) parte(s) através da opção “Retificar autuação”.

2. Variável: aviso_consultar_saj_1
   Label: Se for necessário, acesse o sistema SAJ para obter as informações necessárias da parte.]]></description>
        <transition to="(VCiv) Autos recebidos de digitalização - Retificar autuação" name="Retificar autuação"/>
        <transition to="Nó de Desvio - (VCiv) Processos digitalizados" name="Nó de Desvio - (VCiv) Processos digitalizados">
            <condition expression="#{true}"/>
        </transition>
        <transition to="(VCiv) Encaminhamento para instância superior" name="Remeter processo à instância superior"/>
        <transition to="Término" name="Cancelar e sair da tarefa"/>
    </task-node>
    <task-node end-tasks="true" name="(VCiv) Autos recebidos de digitalização - Retificar autuação">
        <task name="(VCiv) Autos recebidos de digitalização - Retificar autuação" swimlane="Secretaria" priority="3"/>
        <transition to="Término" name="Encaminhar para análise de secretaria"/>
        <transition to="(VCiv) Encaminhamento para instância superior" name="Remeter processo à instância superior"/>
        <transition to="Nó de Desvio - (VCiv) Processos digitalizados" name="Nó de Desvio - (VCiv) Processos digitalizados">
            <condition expression="#{true}"/>
        </transition>
    </task-node>
    <process-state name="(VCiv) Encaminhamento para instância superior">
        <sub-process name="(VCiv) Cumprimento de decisão" binding="late"/>
        <transition to="Término" name="Término"/>
        <event type="node-leave">
            <action expression="#{tramitacaoProcessualService.apagaVariavel('vciv:fbc:encaminhar_instancia_superior')}"/>
        </event>
        <event type="node-enter">
            <action expression="#{tramitacaoProcessualService.gravaVariavel('vciv:fbc:encaminhar_instancia_superior', 'true')}"/>
        </event>
    </process-state>
    <end-state name="Término"/>
    <task-node end-tasks="true" name="Nó de Desvio - (VCiv) Processos digitalizados">
        <task name="Nó de Desvio - (VCiv) Processos digitalizados" swimlane="Nó de Desvio - (VCiv) Processos digitalizados" priority="3"/>
        <transition to="Término" name="Término"/>
        <transition to="(VCiv) Autos recebidos de digitalização" name="(VCiv) Autos recebidos de digitalização"/>
        <transition to="(VCiv) Autos recebidos de digitalização - Retificar dados" name="(VCiv) Autos recebidos de digitalização - Retificar dados"/>
        <transition to="(VCiv) Autos recebidos de digitalização - Concluir recebimento" name="(VCiv) Autos recebidos de digitalização - Concluir recebimento"/>
        <transition to="(VCiv) Autos recebidos de digitalização - Retificar autuação" name="(VCiv) Autos recebidos de digitalização - Retificar autuação"/>
    </task-node>  
    <!-- PROCESS-EVENTS -->
    <event type="superstate-enter">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="process-start">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="before-signal">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="task-end">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="subprocess-created">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="task-create">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="transition">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="task-assign">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="after-signal">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="timer">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="task-start">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="subprocess-end">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="node-leave">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="process-end">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="superstate-leave">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event>
    <event type="node-enter">
        <script>br.com.infox.ibpm.util.JbpmEvents.raiseEvent(executionContext)</script>
    </event> 
</process-definition>
